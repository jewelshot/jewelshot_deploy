/**
 * Credits API Route Tests
 */

import { describe, it, expect, vi, beforeEach } from 'vitest';

// Mock Supabase
vi.mock('@/lib/supabase/client', () => ({
  createClient: vi.fn(() => ({
    auth: {
      getUser: vi.fn(() => Promise.resolve({
        data: { user: { id: 'test-user-id' } },
        error: null,
      })),
    },
  })),
}));

// Mock Credit Manager
vi.mock('@/lib/credit-manager', () => ({
  getCreditManager: vi.fn(() => ({
    getCredits: vi.fn(() => Promise.resolve({
      total: 100,
      ai: 10,
      available: 90,
    })),
    deductCredits: vi.fn(() => Promise.resolve({ success: true })),
    addCredits: vi.fn(() => Promise.resolve({ success: true })),
  })),
}));

describe('/api/credits', () => {
  beforeEach(() => {
    vi.clearAllMocks();
  });

  describe('GET /api/credits/balance', () => {
    it('returns user credits', async () => {
      const { GET } = await import('@/app/api/credits/balance/route');
      const request = new Request('http://localhost:3000/api/credits/balance');
      
      const response = await GET(request);
      const data = await response.json();
      
      expect(response.status).toBe(200);
      expect(data).toHaveProperty('credits');
    });

    it('returns 401 when user is not authenticated', async () => {
      // Mock unauthenticated user
      const { createClient } = await import('@/lib/supabase/client');
      vi.mocked(createClient).mockReturnValueOnce({
        auth: {
          getUser: vi.fn(() => Promise.resolve({
            data: { user: null },
            error: { message: 'Unauthorized' },
          })),
        },
      } as any);

      const { GET } = await import('@/app/api/credits/balance/route');
      const request = new Request('http://localhost:3000/api/credits/balance');
      
      const response = await GET(request);
      
      expect(response.status).toBe(401);
    });
  });

  // Note: Credit deduction is now handled via credit-manager RPC functions
  // These tests are kept for backward compatibility documentation
  describe('Credit System (via RPC)', () => {
    it('uses RPC functions for credit operations', () => {
      // Credits are now managed through:
      // - reserveCredit() - Atomic reserve
      // - confirmCredit() - Confirm after success
      // - refundCredit() - Refund on failure
      // See: src/lib/credit-manager.ts
      expect(true).toBe(true);
    });
  });
});


